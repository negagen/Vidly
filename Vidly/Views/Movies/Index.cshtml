@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

<div style="margin: 10px 0px 10px 0px">
    @Html.ActionLink(linkText: "New movie", actionName: "New", routeValues: null, htmlAttributes: new { @class = "btn btn-primary", role = "button" })
</div>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@Html.ActionLink(movie.Name, "Edit", new { ID = movie.ID })</td>
            <td>@movie.Genre.Name</td>
        </tr>
    }
</table>